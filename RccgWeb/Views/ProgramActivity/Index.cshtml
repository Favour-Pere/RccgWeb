@model List<ProgramActivity>

@{
    var message = TempData["Message"] as string;
    ViewData["Title"] = "Program Activities";
    var userName = User.Identity?.Name ?? "User";
}

<div class="container mt-4">
    <div class="alert alert-primary text-center" role="alert">
        <h2>Welcome, @userName!</h2>
        <p class="mb-0">Manage and track your church program activities with ease.</p>
    </div>

</div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-warning">@message</div>
    }
    else
    {
        <a asp-action="Create" class="btn btn-primary">Add Activity</a>
        <h3>
            History
        </h3>

        @if (Model.Any())
        {
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Date</th>
                        <th>Added By</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var activity in Model)
                    {
                        <tr>
                            <td>@activity.ActivityName</td>
                            <td>@activity.ActivityDescription</td>
                            <td>@activity.DateCreated.ToString("dd MMM yyyy")</td>
                            <td>@activity.PastorInCharge</td> <!-- Assuming you track who added it -->
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted">No program activities found for your church.</p>
        }

    }
