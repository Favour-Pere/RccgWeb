@model RccgWeb.ViewModel.ParishViewModel

<h2>Add Parish</h2>

<form asp-action="AddParish" method="post">
    <div>
        <label>Parish Name</label>
        <input asp-for="ParishName" class="form-control" />
    </div>

    <div>
        <label>
            Parish Pastor
        </label>
        <input asp-for="ParishPastor" class="form-control" />
    </div>

    <div>
        <label>Location</label>
        <input asp-for="Location" class="form-control" />
    </div>

    <div>
        <label>Select Area</label>
        <select asp-for="AreaId" asp-items="Model.Areas" class="form-control" id="areaDropdown"></select>
    </div>
    <button type="submit" class="btn btn-primary">Add Parish</button>
</form>