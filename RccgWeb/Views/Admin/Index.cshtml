@model RccgWeb.ViewModel.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4 p-5">
    <h2 class="text-center display-2 mb-4">Dashboard</h2>
    <div class="row g-4 mt-4">
        <!-- View Zones -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <a class="link-underline link-underline-opacity-0" asp-controller="Zone" asp-action="Index"> <div class="card-header bg-primary text-white">Zone</div></a>
                <ul class="list-group list-group-flush">
                    @foreach (var zone in Model.Zones)
                    {
                        <a class="link-underline link-underline-opacity-0" asp-action="ChurchDetails" asp-route-id="@zone.ChurchId">
                        <li class="list-group-item">@zone.ZoneName</li>
                        </a>
                    }
                </ul>
            </div>
        </div>

        <!-- View Areas -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <a class="link-underline link-underline-opacity-0" asp-controller="Area" asp-action="Index"><div class="card-header bg-secondary text-white">Areas</div></a>
                <ul class="list-group list-group-flush">
                    @foreach (var area in Model.Areas)
                    {
                        <a class="link-underline link-underline-opacity-0" asp-action="ChurchDetails" asp-route-id="@area.ChurchId">
                        <li class="list-group-item">@area.AreaName</li>
                        </a>
                    }
                </ul>
            </div>
        </div>

        <!-- View Parishes -->
        <div class="col-md-4">
            <div class="card shadow-sm">
               <a class="link-underline link-underline-opacity-0" asp-controller="Parish" asp-action="Index"><div class="card-header bg-success text-white">Parishes</div></a>
                <ul class="list-group list-group-flush">
                    @foreach (var parish in Model.Parishes)
                    {
                        <a class="link-underline link-underline-opacity-0" asp-action="ChurchDetails" asp-route-id="@parish.ChurchId">
                        <li class="list-group-item">@parish.ParishName</li>
                        </a>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="shadow-lg p-4 row g-4 mt-4">
        <h5 class="display-5 text-center card-header">Manage Church</h5>
        <!-- Add Zone -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title display-6">Add Zone</h5>
                    <p class="card-text">Create a new zone for the church.</p>
                    <a asp-controller="Zone" asp-action="AddZone" class="btn btn-primary">Add Zone</a>
                </div>
            </div>
        </div>

        <!-- Add Area -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title display-6">Add Area</h5>
                    <p class="card-text">Create a new area within a zone.</p>
                    <a asp-controller="Area" asp-action="AddArea" class="btn btn-primary">Add Area</a>
                </div>
            </div>
        </div>

        <!-- Add Parish -->
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title display-6">Add Parish</h5>
                    <p class="card-text">Create a new parish within an area.</p>
                    <a asp-controller="Parish" asp-action="AddParish" class="btn btn-primary">Add Parish</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-4">
        <!-- Assign & Unassign Church -->
        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Church Assignments</h5>
                    <p class="card-text">Assign or unassign users to churches.</p>
                    <a asp-action="AssignChurch" class="btn btn-success">Assign Church</a>
                    <a asp-action="UnassignChurch" class="btn btn-danger">Unassign Church</a>
                </div>
            </div>
        </div>

        <!-- View Users -->
        <div class="col-md-6">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text">See all registered users.</p>
                    <a asp-action="UserList" class="btn btn-info">View Users</a>
                </div>
            </div>
        </div>
    </div>
</div>