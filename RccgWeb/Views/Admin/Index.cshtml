@model List<ProgramActivity>

@{
    ViewData["Title"] = "User List";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Admin Panel</h2>

    <div class="row g-4">
        <!-- Add Zone -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Zone</h5>
                    <p class="card-text">Create a new church zone.</p>
                    <a asp-controller="Zone" asp-action="AddZone" class="btn btn-primary">Add Zone</a>
                </div>
            </div>
        </div>

        <!-- Add Area -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Area</h5>
                    <p class="card-text">Create a new church area.</p>
                    <a asp-controller="Area" asp-action="AddArea" class="btn btn-primary">Add Area</a>
                </div>
            </div>
        </div>

        <!-- Add Parish -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Parish</h5>
                    <p class="card-text">Create a new church parish.</p>
                    <a asp-controller="Parish" asp-action="AddParish" class="btn btn-primary">Add Parish</a>
                </div>
            </div>
        </div>

        <!-- Assign/Unassign Church -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Manage Church Assignments</h5>
                    <p class="card-text">Assign or remove users from churches.</p>
                    <a asp-action="AssignChurch" class="btn btn-success me-2">Assign Church</a>
                    <a asp-action="UnassignChurch" class="btn btn-danger">Remove Church</a>
                </div>
            </div>
        </div>

        <!-- View User List -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">User List</h5>
                    <p class="card-text">View and manage users.</p>
                    <a asp-action="UserList" class="btn btn-info">View Users</a>
                </div>
            </div>
        </div>

        <!-- Recent Program Activities -->
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Recent Program Activities</h5>
                    <p class="card-text">View the latest added program activities.</p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Minister</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var activity in Model)
                                {
                                    <tr>
                                        <td>@activity.ActivityName</td>
                                        <td>@activity.DateCreated.ToString("MMM dd, yyyy")</td>
                                        <td>@activity.PastorInCharge</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@activity.ProgramActivityId" class="btn btn-sm btn-outline-info">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
