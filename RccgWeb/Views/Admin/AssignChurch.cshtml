@model RccgWeb.ViewModel.ChurchAssignmentViewModel

<h2>Assign Church</h2>
<form asp-action="AssignChurch" method="post">
    <div class="form-group">
        <label>User</label>
        <select name="UserId" class="form-control">
            @foreach (var user in Model.Users)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Church</label>
        <select name="ChurchId" class="form-control">
            @foreach (var church in Model.Churches)
            {
                <option value="@church.Value">@church.Text</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Assign</button>
</form>